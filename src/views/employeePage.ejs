<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        padding: 20px;
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    h4 {
        color: #333;
        margin-top: 20px;
    }

    ol {
        list-style-type: none;
        padding-left: 0;
    }

    li {
        margin-bottom: 10px;
    }

    li button {
        background-color: #4CAF50;
        color: white;
        padding: 6px 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
    }

    li button:hover {
        background-color: #45a049;
    }
</style>
<h2><%=employee.name%></h2>
<h4>Pending Performance Reviews</h4>

<ol>
    <%employee.pendingReviews.forEach((emp) => {%>
        <%console.log(emp[1])%>
    <li><%=emp[0]%><button onclick="location.href = '/api/employeeManagement/shareFeedback/<%=emp[1]%>/<%=employee._id%>';">Share Feedback</button></li>
    <%})%>
</ol>
